<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment1">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="150dp"
        android:layout_marginTop="120dp"
        android:src="@drawable/modul4" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Selamat Datang Di Restaurant Food dan coffe"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="16dp"
        android:gravity="center_horizontal"
        android:text="Silahkan masukkan nomor reservasi meja:"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/input_nama"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:hint="masukkan nomor meja"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btn_dua"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="16dp"
        android:background="@color/purple_500"
        android:gravity="center_horizontal"
        android:text="INPUTKAN"
        android:textSize="12sp" />


</LinearLayout>