<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_margin="20dp"
        android:text="@string/youtube"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:text="Macam-macam Youtube :"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:src="@drawable/yt_creator"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/image1"
            android:src="@drawable/yt_kids"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/image2"
            android:src="@drawable/yt_goo"
            android:layout_width="100dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/image3"
            android:src="@drawable/yt_music"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/image4"
            android:src="@drawable/yt_tv"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginLeft="15dp"/>

        <ImageView
            android:id="@+id/image5"
            android:src="@drawable/yt"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginLeft="15dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/button_kembali"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Kembali"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"/>


</LinearLayout>